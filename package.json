{
  "name": "@aasx/package3",
  "version": "0.1.0",
  "description": "TypeScript AASX v3 packaging library (read/write)",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist coverage",
    "dev": "vitest",
    "lint": "eslint src test examples *.ts",
    "lint:docs": "markdown-link-check README.md doc/**/*.md",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "vitest run --environment node test/package.test.ts test/node-server.test.ts test/fuzz.test.ts",
    "test:browser": "vitest run --environment jsdom test/browser.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^24.10.13",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "jsdom": "^26.1.0",
    "markdown-link-check": "^3.14.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "fflate": "^0.8.2",
    "xml-sax-ts": "^0.3.0"
  }
}
